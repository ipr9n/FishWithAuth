@model List<FishWithAuth.EF.Entities.Boat>

<table class="table" id="boat-table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Название</th>
            <th scope="col">Описание</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <th scope="row">@item.Id</th>
    <td>@Html.ActionLink(@item.Name, $"Boat/{item.Id}")</td>
    <td>@item.Description</td>
</tr>}
    </tbody>
</table>

<script>
    $(document).ready(function () {
        var table = $('#boat-table').DataTable()
        // Setup - add a text input to each footer cell
        $('#boat-table thead tr').clone(true).appendTo('#boat-table thead');
        $('#boat-table thead tr:eq(1) th').each(function (i) {
            var title = $(this).text();
            $(this).html('<input type="text" placeholder="Поиск по ' + title + '" />');

            $('input', this).on('keyup change', function () {
                if (table.column(i).search() !== this.value) {
                    table
                        .column(i)
                        .search(this.value)
                        .draw();
                }
            });
        });
    })
</script>